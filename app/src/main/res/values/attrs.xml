<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--2.在values新建一个attrs.xml,在里面去定义自定义的属性-->
    <!--declare-styleable name="CircleProgressBar",声明了这些属性是给哪个控件使用的,在xml布局中写的的时候会有提示-->
    <declare-styleable name="CircleProgressBar">
        <!--name 自定义属性的名称,format:自定义属性值的类型,color,string,
        reference(关联类型,@string/..,@color),dimension(dp,sp)-->
        <!--环的颜色-->
        <attr name="ringColor" format="reference|color"/>
        <!--环的宽度-->
        <attr name="ringWidth" format="dimension"/>
        <!--内圆的颜色-->
        <attr name="circleColor" format="color|reference"/>
        <!--环起始的角度-->
        <attr name="startAngle" format="float"/>
        <!--扫过的角度-->
        <attr name="sweepAngle" format="float"/>

        <!--可以使用系统的属性 ,因为系统已经把它定义的属性的值的类型定义好了,
        所以这里不需要再添加类型-->
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="android:text"/>
    </declare-styleable>
</resources>
